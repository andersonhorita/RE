<?xml version="1.0" encoding="UTF-8" ?>
<widget id="com.netfreegames.re" version="0.1.1" android-versionCode="110" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
	<name>Rider Escape</name>
	<description>A game with motorcycle chases</description>
	<author href="http://www.netfreegames.com">Anderson Horita</author>
	
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />

	<icon src="www/icon-256.png" width="256" height="256" density="xxxhdpi" />
	<icon src="www/icon-128.png" width="128" height="128" density="xhdpi" />	

	<preference name="orientation" value="landscape" />
	<preference name="fullscreen" value="true" />
	<preference name="DisallowOverscroll" value="true" />
	<preference name="AllowInlineMediaPlayback" value="true" />

	<preference name="android-minSdkVersion" value="16" />
	<preference name="android-targetSdkVersion" value="29" />
	<access origin="*" />
	
	<plugin name="cordova-plugin-crosswalk-webview" />
	<preference name="xwalk64bit" value="true" />
	<plugin name="cordova-plugin-inappbrowser" />
	<plugin name="cordova-plugin-statusbar" />
	<plugin name="cordova-plugin-whitelist" />

	<plugin name="cordova-build-architecture" spec="https://github.com/MBuchalik/cordova-build-architecture.git#v1.0.4" source="git" />
	<!-- <preference name="buildArchitecture" value="x86" /> -->
	<!-- <preference name="buildArchitecture" value="arm64" /> -->
	<!-- <preference name="buildArchitecture" value="x86_64" /> -->
	
	<plugin name="cordova-custom-config" />
		
	<plugin name="cordova-plugin-admob-free">
	<variable name="ADMOB_APP_ID" value="ca-app-pub-2153740047112860~1052880306" />
    </plugin>
		
	<!-- <preference name="phonegap-version" value="cli-7.1.0" /> -->

	<engine name="android" />
</widget>